{% macro nav(navigation, parent = null) %}
    {% import _self as macros %}

    {% if parent is null %}
    <ul class="nav flex-column">
    {% endif %}

    {% for item in navigation %}
        {% set active = app.request.absoluteUrl starts with item.url or item.url == '/' and app.request.absoluteUrl is empty %}
        <li class="nav-item">
            {% set class = [
                'nav-link',
                active ? 'active' : null,
            ]|join(' ') %}
            <a href="{{ item.url|trim('/') }}" class="{{ class }}">{{ item.label }}</a>
            {% if not item.children|default([]) is empty %}
                <ul>
                    {{ macros.nav(item.children|default([]), (parent?:'')~item.url~'/') }}
                </ul>
            {% endif %}
        </li>
    {% endfor %}

    {% if parent is null %}
    </ul>
    {% endif %}
{% endmacro %}